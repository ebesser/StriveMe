<div class="container">
    <div class="page-header">
        <h1 id="timeline">Your Journal</h1>
<!--         <a type='button' class='btn btn-primary btn-lg' role="button">Add Entry</a> -->
    </div>
    <ul class="timeline">
    	<% x = 1 %>
    	<% @comments.each do |comment| %>
	    	<% if x%2 != 0 %>
		        <li>
		          <div class="timeline-badge"><i class="glyphicon glyphicon-align-left"></i></div>
		          <div class="timeline-panel">
		            <div class="timeline-heading">
		              <h4 class="timeline-title"><%= comment.email %></h4>
		              <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> <%= comment.created_at.localtime.to_formatted_s(:long_ordinal) %></small></p>
		            </div>
		            <div class="timeline-body">
		              <p><%= comment.body %></p>
		            </div>
		          </div>
		        </li>
		        <% x += 1 %>
	        <% else %>
		        <li class="timeline-inverted">
		          <div class="timeline-badge warning"><i class="glyphicon glyphicon-align-right"></i></div>
		          <div class="timeline-panel">
		            <div class="timeline-heading">
		              <h4 class="timeline-title"><%= comment.email %></h4>
		              <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i><%= comment.created_at.localtime.to_formatted_s(:long_ordinal) %></small></p>
		            </div>
		            <div class="timeline-body">
		              <p><%= comment.body %></p>
		            </div>
		          </div>
		        </li>
		        <% x += 1 %>
	        <% end %>
    	<% end %>
    </ul>
</div>